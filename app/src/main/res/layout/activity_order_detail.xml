<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    tools:context=".ui.OrderDetailActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/oder_detail_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <ImageView
        android:id="@+id/back_space_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/oder_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="주문 현황"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/missing_oder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="90dp"
        android:text="미승인 주문건 현황"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- namespace 직관화 하여 이름 설정     -->


    <!--1.픽업 일자    -->
    <TextView
        android:id="@+id/pick_up_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="140dp"
        android:padding="10dp"
        android:text="픽업 일자" />
    <!-- 픽업 일자 디테일   -->
    <TextView
        android:id="@+id/oder_detail_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="140dp"
        android:padding="10dp"
        android:text="2024/01/25"
        android:textStyle="bold" />
    <!-- 픽업 시간 -->
    <TextView
        android:id="@+id/pick_up_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="165dp"
        android:padding="10dp"
        android:text="픽업 시간" />

    <!-- 픽업 시간 디테일   -->
    <TextView
        android:id="@+id/oder_detail_time_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="165dp"
        android:padding="10dp"
        android:text="11:02"
        android:textStyle="bold" />

    <!-- 구매자 명   -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="190dp"
        android:padding="10dp"
        android:text="이름" />
    <!-- 구매자 명 상세(Detail)   -->
    <TextView
        android:id="@+id/name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="190dp"
        android:padding="10dp"
        android:text="이찰떡"
        android:textStyle="bold" />
    <!--구매자 전화 번호-->
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="220dp"
        android:padding="10dp"
        android:text="휴대 전화" />
    <!-- 구매자 전화 번호 상세  -->
    <TextView
        android:id="@+id/phone_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="220dp"
        android:padding="10dp"
        android:text="010-1234-5678"
        android:textStyle="bold" />
    <!--마감 처리-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="280dp"
        android:text="-------------------------------------------------------------------------------------------------" />


<!-- 케이크 size   -->
    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:text="사이즈"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        />
<!-- 케이크 사이즈 detail-->
    <TextView
        android:id="@+id/size_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:text="미니"
        android:layout_marginLeft="130dp"
        android:padding="10dp"
        android:textStyle="bold"
        />
<!--sheet-->
    <TextView
        android:id="@+id/sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:text="시트(빵)"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        />
<!-- sheet detail  -->
    <TextView
        android:id="@+id/sheet_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:text="초코 시트"
        android:layout_marginLeft="130dp"
        android:padding="10dp"
        android:textStyle="bold"
        />
<!--cream-->
    <TextView
        android:id="@+id/cream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:text="속크림"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        />
<!-- cream detail   -->
    <TextView
        android:id="@+id/cream_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:text="블루베리"
        android:layout_marginLeft="130dp"
        android:padding="10dp"
        android:textStyle="bold"
        />
<!--  message   -->
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:text="문구/글씨 색상"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        />

<!-- message detail-->
    <TextView
        android:id="@+id/message_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:text="생일 축하해 징징아"
        android:layout_marginLeft="130dp"
        android:padding="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:text="사진"/>

    <!-- 사진1-->
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/rectangle_style"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="50dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="485dp"
        android:src="@drawable/sinina"
        android:layout_marginLeft="70dp"/>

<!-- 사진2-->

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="470dp"
        android:src="@drawable/rectangle_style" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="485dp"
        android:src="@drawable/sinina"
        android:layout_marginLeft="215dp"/>


    <!-- 사진3-->
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/rectangle_style"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="50dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="620dp"
        android:src="@drawable/sinina"
        android:layout_marginLeft="70dp"/>

    <!-- 사진4-->

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/rectangle_style"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="200dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="620dp"
        android:src="@drawable/sinina"
        android:layout_marginLeft="215dp"/>

</RelativeLayout>